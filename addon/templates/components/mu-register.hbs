<div class="feedback-message">
  {{#if this.loading}}
    <span class="loading">Registering...</span>
  {{/if}}
  {{#if this.errorMessage}}
    <span class="error-message">{{this.errorMessage}}</span>
  {{/if}}
</div>
<form class="registration-form" {{action "register" on="submit"}}>
  <div class="registration-form-name">
    <label>Name</label>
    <Input @value={{this.name}} placeholder="John Doe" />
  </div>
  <div class="registration-form-nickname">
    <label>Username</label>
    <Input @value={{this.nickname}} placeholder="john.doe" />
  </div>
  <div class="registration-form-password">
    <label>Password</label>
    <Input @value={{this.password}} type="password" />
  </div>
  <div class="registration-form-password-confirmation">
    <label>Confirm password</label>
    <Input @value={{this.passwordConfirmation}} type="password" />
  </div>
  <button type="submit">Register</button>
</form>